{
  "author": {
    "email": "paul+code@webb.page",
    "name": "netop://ウエハ",
    "url": "https://webb.page"
  },
  "bin": {
    "chronver": "./bin/chronver.js"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "chronver-regex": "^2019.10.25"
  },
  "description": "The chronological versioner",
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/preset-flow": "^7.7.4",
    "@inc/eslint-config": "^2019.10.22",
    "babel-eslint": "^10.0.3",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^6.7.2",
    "eslint-plugin-flowtype": "^4.5.2",
    "flow-bin": "^0.114.0",
    "husky": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "snazzy": "^8.0.0",
    "standardx": "^5.0.0",
    "updates": "^9.3.3"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "bin/chronver.js",
    "lib/chronver.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run test && npm run increment && git add -A :/"
    }
  },
  "keywords": [
    "chronologic",
    "chronver",
    "date",
    "match",
    "matching",
    "regex",
    "regexp",
    "version",
    "versions"
  ],
  "license": "MIT",
  "main": "lib/chronver.js",
  "name": "chronver",
  "repository": "https://code.webb.page/ChronVer/chronver",
  "scripts": {
    "build": "babel src/ --out-dir lib/",
    "format": "eslint . --fix",
    "increment": "node bin/chronver.js --increment package",
    "test": "npm run build && run-s test:*",
    "test:dependencies": "updates --update ./",
    "test:flow": "flow",
    "test:lint": "standardx --verbose | snazzy"
  },
  "standardx": {
    "ignore": [
      "lib/*"
    ]
  },
  "version": "2019.12.16"
}
